{% extends 'base.html.twig' %}

{% block title %}Détails du livre{% endblock %}

{% block body %}
    <h1>{{ book.title }}</h1>
    <img src="{{ asset('uploads/covers/' ~ book.coverImage) }}" alt="{{ book.title }}" width="200">
    <p>{{ book.description }}</p>
    <p><strong>Prix :</strong> {{ book.price }} €</p>
{% endblock %}
